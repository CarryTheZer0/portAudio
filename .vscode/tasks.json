{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Test",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "${workspaceFolder}\\src\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}\\src",
                "-IC:\\Clib\\fftw\\include",
                "-IC:\\Clib\\glew-2.1.0\\include",
                "-IC:\\Clib\\glfw-3.3.8\\include",
                "-IC:\\Clib\\portaudio\\portaudio\\include",
                "-IC:\\Users\\mchlp\\Documents\\vsCode\\UI\\include",
                "-IC:\\Clib\\glm",
                "-L${workspaceFolder}\\ext",
                "-lUi",
                "-lportaudio_x64",
                "-lfftw3",
                "-lglew32",
                "-lglew32s",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-lfreetype",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Test Library",
            "dependsOn": ["Build Test"],
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${workspaceFolder}\\regressionTest"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Test the open file"
        },
        {
            "type": "cppbuild",
            "label": "Build Library",
            "command": "g++",
            "args": [
                "-g",
                "-c",
                "${workspaceFolder}\\src\\*.cpp",
                "-I${workspaceFolder}\\src",
                "-IC:\\Clib\\glew-2.1.0\\include",
                "-IC:\\Clib\\glfw-3.4.bin.WIN64\\include",
                "-IC:\\Clib\\portaudio\\portaudio\\include",
                "-L${workspaceFolder}\\ext",
                "-lportaudio_x64",
                "-lfftw3",
            ],
            "options": {
                "cwd": "${workspaceFolder}\\lib"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build the Engine Library"
        },
        {
            "type": "shell",
            "label": "Update Include",
            "dependsOn": ["Build Library"],
            "command": "copy",
            "args": [
                 "src/*.h,src/*/*.h",
                 "include"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Copy include files"
        },
        {
            "type": "shell",
            "label": "Archive Library",
            "dependsOn": ["Update Include"],
            "command": "ar",
            "args": [
                "rvs",
                "${workspaceFolder}\\lib\\libSynth.a",
                "${workspaceFolder}\\lib\\*.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\lib"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Archive the Engine Library"
        }
    ],
    "version": "2.0.0"
}